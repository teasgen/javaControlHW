<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<FlowPane hgap="10.0" prefHeight="1000.0" prefWidth="1400.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.teasgen.keyraces.client.GameViewController">
    <VBox alignment="TOP_CENTER" prefHeight="1000.0" prefWidth="1300.0">
        <FlowPane.margin>
            <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
        </FlowPane.margin>
        <BorderPane prefHeight="150.0" prefWidth="1300.0">
            <left>
                <Label fx:id="table" prefHeight="150.0" prefWidth="700.0" text="Result table">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
            </left>
            <right>
                <Label fx:id="remainTime" prefHeight="150.0" prefWidth="300.0" text="HERE WILL BE TIME">
                    <font>
                        <Font size="18.0" />
                    </font>
                </Label>
            </right>
          <top>
              <Label fx:id="tableTimePreview" text="Players" BorderPane.alignment="CENTER">
                  <font>
                      <Font size="18.0" />
                  </font>
              </Label>
          </top>
        </BorderPane>
        <BorderPane prefHeight="400.0" prefWidth="1380.0">
           <left>
               <Label fx:id="myText" alignment="TOP_LEFT" prefHeight="400.0" prefWidth="1300.0" text="Text">
                   <font>
                       <Font size="18.0" />
                   </font>
               </Label>
           </left>
           <top>
               <Label text="Text" BorderPane.alignment="CENTER">
                   <font>
                       <Font size="18.0" />
                   </font>
               </Label>
           </top>
        </BorderPane>
        <BorderPane prefHeight="400.0" prefWidth="1300.0">
           <top>
               <Label text="Input text here" BorderPane.alignment="CENTER">
                   <font>
                       <Font size="18.0" />
                   </font>
               </Label>
           </top>
           <left>
               <TextField fx:id="inputText" alignment="TOP_LEFT" prefHeight="316.0" prefWidth="1300.0" BorderPane.alignment="CENTER">
                   <font>
                       <Font size="18.0" />
                   </font>
               </TextField>
           </left>
        </BorderPane>
    </VBox>
</FlowPane>
